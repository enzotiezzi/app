<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome Candidato"
            android:id="@+id/textViewNomeCandidatoCV"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Telefone email"
            android:id="@+id/textViewTelefoneEmail"/>


    </LinearLayout>

    <br.com.zelar.zellarempresas.Custom.GestaoVagaQuickActionsView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quickActionsViewCV"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"/>

</LinearLayout>