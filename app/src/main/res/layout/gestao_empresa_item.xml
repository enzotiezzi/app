<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewTipo"
            android:src="@drawable/empresa_top"
            android:layout_marginRight="5dp"/>


        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/textViewNumeroGrupo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewOpen"
            android:src="@drawable/arrow_down_primary"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewNomeGrupo"
            android:text="Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/textViewLocais"
                    android:gravity="center"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/textViewPessoas"
                    android:gravity="center"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:gravity="center"
                    android:id="@+id/textViewVagas"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/appendGroup"
        android:visibility="gone">

    </LinearLayout>

</LinearLayout>